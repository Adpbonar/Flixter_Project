<div class="course-box col-10 offset-1">
  <h1 class=text-center>Add a new course</h1>
    <br />
   <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description, :as => :text, :input_html => {:class => "redactor"}%>
    <%= f.input :cost %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>
