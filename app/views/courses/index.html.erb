<div class="course-box col-10 offset-1">
	<h1 class="text-center">Learn about new places today</h1>
	<br />
	<% @courses.each do |course|%>
		<h2 class="text-center"><%= course.title %></h2>
		<br />
		<div class="row">
			<div class="col-sm-8 col-12">
				<%= course.description %>
			</div>
			<div class="col-sm-4 col-12 text-center">
				<%= link_to 'Button', '#', class: 'btn btn-primary btn-large' %>
			</div>
		</div>
		<hr />
	<% end %>
</div>
<br class="clear" />